<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:infra="clr-namespace:WPF.Common.UI.Infrastracture">

    <Style x:Key="DialogBorderStyle" TargetType="{x:Type Border}">
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
    </Style>
    
    <Style x:Key="DialogControlStyle" TargetType="{x:Type infra:DialogUserControl}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Margin" Value="60" />
    </Style>

    <LinearGradientBrush x:Key="DialogBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="Gray" Offset="0.0"  />
        <GradientStop Color="DarkGray"  Offset="0.5"/>
    </LinearGradientBrush>

</ResourceDictionary>